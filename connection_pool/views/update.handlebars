<h1>Editar a série</h1>

<form action="/series/updateserie" method="POST" class="form">
<input type="hidden" name="id" value="{{series.id}}">
<div class="form-control">
    <label for="title">Digite o título da série</label>
    <input type="text" name="title" placeholder="Nome da série" value="{{series.title}}">
</div>

<div class="form-control">
    <label for="episodios">Quantidade de episódios</label>
    <input type="number" name="episodios" placeholder="Digite o número de episódios" value="{{series.episodios}}">
</div>
<input type="submit" value="Cadastrar">

</form>
<form action="/series/delete/{{serie.id}}" method="POST">
        <input type="submit" value="Deletar">
    </form>